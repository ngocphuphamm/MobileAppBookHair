<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="195dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:id="@+id/noibatrelative"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/noibatimage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/toclangtu"
            app:riv_corner_radius_top_left="8dp"
            app:riv_corner_radius_top_right="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noibatimage"
            android:background="@drawable/bg_radius_bottom_blue"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/namesalon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/antic"
                android:text="Salon lãng tử"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/diachisalon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/gilda_display"
                android:paddingBottom="5dp"
                android:text="41 Phạm Văn Nghị"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>