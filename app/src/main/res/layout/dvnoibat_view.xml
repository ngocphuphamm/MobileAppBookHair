<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:id="@+id/dvnoibatrelative"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dvnoibatimage"
            android:layout_width="match_parent"
            app:riv_corner_radius_top_left="8dp"
            app:riv_corner_radius_top_right="8dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/combo10buoc30shine" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dvnoibatimage"
            android:background="@drawable/bg_radius_bottom_blue"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/namedichvu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/antic"
                android:text="Combo 10 bước"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tensalon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namedichvu"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/gilda_display"
                android:paddingBottom="5dp"
                android:text="30Shine"
                android:textColor="@color/white"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/giadichvu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/namedichvu"
                android:fontFamily="@font/gilda_display"
                android:text="80K"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>