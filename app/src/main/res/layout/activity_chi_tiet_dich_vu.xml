<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietDichVuActivity">

  <ImageView
      android:id="@+id/imageCTDV"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:scaleType="centerCrop"
      android:src="@drawable/salonloc" />

  <ImageButton
      android:id="@+id/btb_back_CTDV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="5dp"
      android:background="@color/white"
      android:src="@drawable/ic_baseline_arrow_back_black" />

  <TextView
      android:id="@+id/txtTenCTDV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageCTDV"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:text="ShineCombo cắt gội 10 bước"
      android:textColor="@color/black"
      android:textSize="20sp"
      android:textStyle="bold" />

  <ImageView
      android:id="@+id/imageTimer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageCTDV"
      android:layout_marginLeft="340dp"
      android:layout_marginTop="10dp"
      android:src="@drawable/ic_baseline_access_time_24" />

  <TextView
      android:id="@+id/txtTimeDV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageTimer"
      android:layout_marginLeft="330dp"
      android:text="45 phút" />

  <TextView
      android:id="@+id/txtGiaCTDV"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txtTenCTDV"
      android:layout_marginLeft="10dp"
      android:layout_marginTop="10dp"
      android:text="120.000đ"
      android:textColor="@color/blue_main" />

  <Button
      android:id="@+id/btn_ChonDV"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txtGiaCTDV"
      android:layout_centerInParent="true"
      android:layout_marginTop="35dp"
      android:background="@drawable/border_blue"
      android:text="Chọn dịch vụ"
      app:backgroundTint="@null"
      android:textAllCaps="false"
      android:textColor="@color/white" />


</RelativeLayout>