<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".YeuThichActivity">
    <ImageButton
        android:layout_marginTop="10dp"
        android:id="@+id/btn_home_yt"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salon Yêu Thích"
            android:textColor="@color/blue_main"
            android:fontFamily="@font/leckerlione_regular"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerYeuThich"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>