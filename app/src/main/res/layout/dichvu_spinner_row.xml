<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageDichvusp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/salonloc"
        />

    <TextView
        android:id="@+id/tendv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imageDichvusp"
        android:text="Cắt tóc"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tendv"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/thoigian"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="30 phút"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/giaDV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30.000 VNĐ"
            android:textSize="13dp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
</RelativeLayout>