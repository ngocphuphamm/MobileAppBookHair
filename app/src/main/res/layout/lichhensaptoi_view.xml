<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearRootLichhen"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewHinh"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textViewTenNhanVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageViewHinh"
        android:text="Tên chủ tiệm"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewTenSalon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTenNhanVien"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/imageViewHinh"
        android:text="tên salon"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewNgayDat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTenSalon"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@id/imageViewHinh"
        android:text="thời gian"
        android:textColor="#C2C2C2"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/lnlXacNhan"
        android:layout_width="102dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="221dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="13dp"
        android:layout_toEndOf="@+id/imageViewHinh"
        android:background="@drawable/border_orange">
        <TextView
            android:id="@+id/textViewXacNhan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Chưa xác nhận"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="12dp"
            />
    </LinearLayout>

</RelativeLayout>